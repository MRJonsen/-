/**app.wxss**/
@import 'ui/weui/weui.wxss';
@import 'ui/zanui/index.wxss';
/*黑色 文字 */
.text_color_black{
  color: #353535
}
/*灰色文字  */
.text_color_gray{
  color: #888888
}
.text_color_white{
  color: #F8F8F8;
}
/*提醒颜色  */
.text_color_red{
  color: #e64340
}
.text_l{
 font-size: 16px;
}
.text_m{
font-size: 14px;
}
.text_s{
 font-size: 12px;
}

.text_s_s{
  font-size: 11px;
}
/* 去掉滚动条  */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
/*全局背景色  */
/* background: linear-gradient(to right, rgba(47,161,87,0.8), rgba(34,134,100,0.8));  */
.global_background{
  background: #28a564;
}

.loadmore {
  color: #888;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
}
.loadmore.loading::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  margin-top: -10rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%
}

page{
    background-color: #F8F8F8;
